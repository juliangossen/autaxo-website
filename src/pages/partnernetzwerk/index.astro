---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

const title = "Autaxo Partnernetzwerk | Experten für den KFZ-Handel";
const description =
  "Geprüfte Steuerberater, Buchhalter und Digitalisierungs-Experten für den Gebrauchtwagenhandel: §25a, GoBD, EU/Export und DATEV – abgestimmt auf die Autaxo-Logik.";

const categories = [
  {
    title: "Steuerberatung",
    icon: "lucide:scale",
    description:
      "Berufsträger mit ausgewiesener KFZ-Handelsexpertise. Sicher in §25a, EU/Export, Reverse-Charge und USt-ID-Prüfung.",
    features: ["Jahresabschlüsse", "Steuerliche Gestaltung", "Betriebsprüfungen"],
    link: "/partnernetzwerk/steuerberatung",
    color: "text-blue-400",
    bg: "bg-blue-400/10",
    border: "group-hover:border-blue-400/50",
  },
  {
    title: "Laufende Buchhaltung",
    icon: "lucide:calculator",
    description:
      "Laufende Buchhaltung & Lohn – GoBD-konform. §25a sauber abgebildet, Belege revisionssicher und export-ready für DATEV.",
    features: ["Laufende FiBu", "Lohnabrechnung", "DATEV-Export Prüfung"],
    link: "/partnernetzwerk/buchhaltung",
    color: "text-green-400",
    bg: "bg-green-400/10",
    border: "group-hover:border-green-400/50",
  },
  {
    title: "Prozesse & Digitalisierung",
    icon: "lucide:cpu",
    description:
      "GoBD-Setup, Kassenbuch, E-Rechnung (XRechnung/ZUGFeRD). Standardisiert Abläufe und schult Teams – passend zu Autaxo.",
    features: ["Workflow-Optimierung", "Autaxo-Schulung", "GoBD-Verfahrensdokumentation"],
    link: "/partnernetzwerk/digitalisierung",
    color: "text-purple-400",
    bg: "bg-purple-400/10",
    border: "group-hover:border-purple-400/50",
  },
];

const schema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Autaxo Partnernetzwerk",
  "description": description,
  "inLanguage": "de-DE",
};
---

<MarketingLayout title={title} description={description}>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(schema)} />

  {/* HERO – 1:1 FAQ-Stil (rote Wolke + Badge) */}
  <section class="pt-32 pb-16 bg-[#0b0c10] relative overflow-hidden">
    {/* ✅ Glow/Wolke – robust sichtbar */}
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[420px] bg-primary/10 blur-[100px] rounded-full pointer-events-none -z-10"></div>

    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-primary text-sm font-medium mb-6">
        <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
        Experten-Netzwerk
      </div>

      <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 tracking-tight text-balance">
        Partnernetzwerk <span class="text-primary">(Experten)</span>
      </h1>

      <p class="text-text-muted text-lg md:text-xl max-w-3xl mx-auto leading-relaxed text-balance">
        Finden Sie geprüfte Experten, die die <strong class="text-white">Autaxo-Logik</strong> verstehen und Prozesse im
        Gebrauchtwagenhandel <strong class="text-white">GoBD-konform</strong> aufsetzen – von <strong class="text-white">§25a</strong>
        bis <strong class="text-white">DATEV</strong>.
      </p>

      <div class="mt-10 flex flex-wrap justify-center gap-4">
        <a
          href="#kategorien"
          class="px-8 py-4 bg-primary hover:bg-primary-hover text-white font-bold rounded-lg transition-all shadow-lg shadow-primary/20"
        >
          Partner finden
        </a>
        <a
          href="/kontakt"
          class="px-8 py-4 bg-white/5 hover:bg-white/10 text-white font-medium rounded-lg border border-white/10 transition-all"
        >
          Partner werden
        </a>
      </div>
    </div>
  </section>

  {/* KATEGORIEN */}
  <section id="kategorien" class="pb-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid md:grid-cols-3 gap-8">
        {categories.map((cat) => (
          <a
            href={cat.link}
            class={`group relative bg-[#15171e] border border-white/10 rounded-2xl p-8 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl ${cat.border}`}
          >
            <div class="absolute top-4 right-4 px-2 py-1 bg-white/5 rounded text-[10px] uppercase font-bold text-white/50 tracking-wider group-hover:text-white group-hover:bg-white/10 transition-colors">
              Geprüft
            </div>

            <div class={`w-14 h-14 ${cat.bg} ${cat.color} rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform`}>
              <Icon name={cat.icon} class="w-7 h-7" />
            </div>

            <h2 class="text-2xl font-bold text-white mb-4 group-hover:text-primary transition-colors">
              {cat.title}
            </h2>

            <p class="text-text-muted text-sm leading-relaxed mb-8 min-h-[92px]">
              {cat.description}
            </p>

            <ul class="space-y-3 mb-8" aria-label={`Leistungen: ${cat.title}`}>
              {cat.features.map((feat) => (
                <li class="flex items-center gap-2 text-sm text-gray-400">
                  <Icon name="lucide:check-circle-2" class={`w-4 h-4 ${cat.color}`} />
                  {feat}
                </li>
              ))}
            </ul>

            <div class="flex items-center gap-2 text-white font-medium group-hover:gap-4 transition-all">
              Partner finden
              <Icon name="lucide:arrow-right" class="w-4 h-4 text-primary" />
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  {/* NUTZEN */}
  <section class="py-24 bg-[#0b0c10] border-t border-white/5">
    <div class="container mx-auto px-4 max-w-5xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">Ihr Nutzen im Netzwerk</h2>
        <p class="text-text-muted max-w-3xl mx-auto">
          Weniger Reibung zwischen Handel, Buchhaltung und Steuerberatung – durch abgestimmte Standards rund um Autaxo.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 text-left">
        <div class="flex gap-4">
          <div class="bg-primary/10 p-3 rounded-lg h-fit">
            <Icon name="lucide:shield-check" class="w-6 h-6 text-primary" />
          </div>
          <div>
            <h3 class="text-white font-bold text-lg mb-2">Rechtssicherheit</h3>
            <p class="text-text-muted text-sm">
              Partner kennen Stolperfallen im KFZ-Handel – von §25a bis zu Nachweisen bei EU/Export und GoBD-Themen.
            </p>
          </div>
        </div>

        <div class="flex gap-4">
          <div class="bg-primary/10 p-3 rounded-lg h-fit">
            <Icon name="lucide:arrow-up-right" class="w-6 h-6 text-primary" />
          </div>
          <div>
            <h3 class="text-white font-bold text-lg mb-2">Skalierbare Prozesse</h3>
            <p class="text-text-muted text-sm">
              Digitalisierte Workflows zwischen Autaxo und DATEV reduzieren Rückfragen und beschleunigen Monatsabschlüsse.
            </p>
          </div>
        </div>

        <div class="flex gap-4">
          <div class="bg-primary/10 p-3 rounded-lg h-fit">
            <Icon name="lucide:file-check" class="w-6 h-6 text-primary" />
          </div>
          <div>
            <h3 class="text-white font-bold text-lg mb-2">E-Rechnung Ready</h3>
            <p class="text-text-muted text-sm">
              Vorbereitung auf E-Rechnung (XRechnung/ZUGFeRD): Autaxo liefert die Technik, Partner das Setup und die Schulung.
            </p>
          </div>
        </div>

        <div class="flex gap-4">
          <div class="bg-primary/10 p-3 rounded-lg h-fit">
            <Icon name="lucide:line-chart" class="w-6 h-6 text-primary" />
          </div>
          <div>
            <h3 class="text-white font-bold text-lg mb-2">Echtes Controlling</h3>
            <p class="text-text-muted text-sm">
              Wenn DMS und Buchhaltung synchron laufen, werden Auswertungen belastbar. Entscheidungen basieren auf Zahlen.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* CTA */}
  <section class="py-24 bg-[#0b0c10] text-center border-t border-white/5">
    <div class="container mx-auto px-4">
      <div class="relative bg-gradient-to-br from-[#1a1d26] to-[#15171e] border border-white/10 rounded-3xl p-8 md:p-12 max-w-4xl mx-auto overflow-hidden">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[900px] h-[320px] bg-primary/10 blur-[100px] rounded-full pointer-events-none"></div>

        <h3 class="text-2xl md:text-3xl font-bold text-white mb-4 relative z-10">
          Sie sind Steuerberater oder Consultant?
        </h3>
        <p class="text-text-muted mb-8 max-w-xl mx-auto relative z-10">
          Werden Sie Teil des Netzwerks. Profitieren Sie von Mandanten, die digital arbeiten und saubere Daten liefern.
        </p>
        <a href="/kontakt" class="btn btn--primary relative z-10">
          Partner werden
        </a>
      </div>
    </div>
  </section>
</MarketingLayout>
