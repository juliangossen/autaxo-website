---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

// 1. METADATEN
const title = "KI-Assistent Carlo | Autaxo Dealer-Management-System";
const description = "Carlo erledigt deine Verwaltungsaufgaben: Fahrzeugscheine scannen, Kunden anlegen und Dokumente zuordnen. Automatisch und DSGVO-konform.";

// 2. FAQ DATEN (Spezifisch für KI)
const faqs = [
  {
    question: "Werden meine Daten zum Trainieren von externer KI genutzt?",
    answer: "Nein. Alle Datenverarbeitungen erfolgen ausschließlich innerhalb der geschützten Autaxo-Infrastruktur. Es fließen keine sensiblen Kundendaten an öffentliche KI-Modelle wie ChatGPT (OpenAI)."
  },
  {
    question: "Welche Dokumente kann Carlo lesen?",
    answer: "Carlo ist trainiert auf typische KFZ-Dokumente: Fahrzeugscheine (Zulassungsbescheinigung Teil I & II), Personalausweise, Kaufverträge, Rechnungen und E-Mail-Texte."
  },
  {
    question: "Macht die KI Fehler?",
    answer: "Wie jeder Assistent ist Carlo sehr präzise, aber nicht unfehlbar. Deshalb markiert das System unsichere Daten (z.B. bei schlechter Fotoqualität) automatisch, damit du sie kurz bestätigen kannst."
  },
  {
    question: "Funktioniert der Scan auch mit dem Handy?",
    answer: "Ja. Du kannst Fahrzeugscheine direkt mit dem Smartphone fotografieren. Carlo extrahiert die Daten (FIN, EZ, KW, Hubraum) und legt das Fahrzeug in Sekunden an."
  }
];

// 3. FEATURE STEPS (Aus deinem alten Content übernommen)
const steps = [
  {
    step: "01",
    title: "Fahrzeuge anlegen (Scan)",
    text: "Carlo erkennt Daten aus Fahrzeugpapieren (Foto/PDF) oder Texten. FIN, Erstzulassung, Kilometerstand und Ausstattung werden zuverlässig extrahiert und ein Datensatz angelegt.",
    icon: "lucide:scan-line"
  },
  {
    step: "02",
    title: "Kundendaten erfassen",
    text: "Ob Personalausweis oder E-Mail-Signatur: Carlo erkennt Kundendaten aus fast jeder Quelle. So wird aus einem Scan in Sekunden ein vollständiger Kundenkontakt inkl. Adresse.",
    icon: "lucide:user-square-2"
  },
  {
    step: "03",
    title: "Dokumente zuordnen",
    text: "Lade Kaufverträge oder Briefe einfach hoch – Carlo versteht den Inhalt und ordnet das Dokument automatisch dem richtigen Fahrzeug oder Kunden in der Akte zu.",
    icon: "lucide:files"
  },
  {
    step: "04",
    title: "Plausibilitäts-Check",
    text: "Fehlende oder unklare Angaben erkennt Carlo sofort. Er prüft alle Datensätze auf Logik (z.B. passt die PLZ zum Ort?), bevor sie weiterverarbeitet werden.",
    icon: "lucide:search-check"
  },
  {
    step: "05",
    title: "DSGVO & Sicherheit",
    text: "Keine Experimente mit deinen Daten. Die Verarbeitung läuft auf isolierten Servern. Jede Aktion von Carlo wird im Audit-Trail dokumentiert und ist nachvollziehbar.",
    icon: "lucide:server"
  }
];
---

<MarketingLayout title={title} description={description}>

  <section class="relative pt-32 pb-20 bg-[#0b0c10] overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-purple-500/20 via-[#0b0c10] to-[#0b0c10]"></div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-purple-500/10 border border-purple-500/20 text-purple-400 text-xs font-bold uppercase tracking-wider mb-6">
        <Icon name="lucide:sparkles" class="w-3 h-3" />
        AI Powered
      </div>
      <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 tracking-tight text-balance">
        Gestatten: Carlo. <br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-primary">Dein KI-Assistent.</span>
      </h1>
      <p class="text-xl text-text-muted max-w-3xl mx-auto leading-relaxed mb-10 text-balance">
        Carlo liest Fahrzeugpapiere, erkennt Kunden und sortiert Dokumente. <br>Erledige Verwaltungsaufgaben in Sekunden statt Minuten.
      </p>

      <div class="flex flex-wrap justify-center gap-4">
        <a href="https://garage.autaxo.de/auth/sign-up" class="px-8 py-4 bg-primary hover:bg-primary-hover text-white font-bold rounded-lg transition-all shadow-lg shadow-primary/20">
          Carlo testen
        </a>
        <a href="#details" class="px-8 py-4 bg-white/5 hover:bg-white/10 text-white font-medium rounded-lg border border-white/10 transition-all">
          Wie es funktioniert
        </a>
      </div>
    </div>
  </section>

  <section id="details" class="py-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-3xl font-bold text-white mb-4">Was Carlo für dich tun kann</h2>
        <p class="text-text-muted">Fünf Wege, wie KI deinen Arbeitsalltag beschleunigt.</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {steps.map((item) => (
          <div class="relative p-8 rounded-2xl bg-[#15171e] border border-white/10 hover:border-purple-500/30 transition-all duration-300 group">
            
            <div class="flex items-start justify-between mb-6">
              <div class="w-12 h-12 rounded-lg bg-purple-500/10 flex items-center justify-center text-purple-400 group-hover:bg-purple-500 group-hover:text-white transition-colors">
                <Icon name={item.icon} class="w-6 h-6" />
              </div>
              <span class="text-4xl font-bold text-white/5 font-mono group-hover:text-white/10 transition-colors">
                {item.step}
              </span>
            </div>

            <h3 class="text-xl font-bold text-white mb-3">{item.title}</h3>
            <p class="text-text-muted text-sm leading-relaxed">
              {item.text}
            </p>
          </div>
        ))}

        <div class="relative p-8 rounded-2xl bg-gradient-to-br from-purple-900/20 to-primary/10 border border-purple-500/20 flex flex-col justify-center items-center text-center">
          <Icon name="lucide:bot" class="w-12 h-12 text-purple-400 mb-4" />
          <h3 class="text-xl font-bold text-white mb-2">Carlo in Aktion erleben?</h3>
          <p class="text-white/80 text-sm mb-6">Erstelle deinen Account und lade den ersten Fahrzeugschein hoch.</p>
          <a href="https://garage.autaxo.de/auth/sign-up" class="px-6 py-2 bg-white text-black font-bold rounded hover:bg-gray-200 transition-colors w-full">
            Jetzt ausprobieren
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-24 bg-surface border-t border-white/5">
    <div class="container mx-auto px-4 max-w-3xl">
      <div class="text-center mb-12">
        <h2 class="text-2xl font-bold text-white mb-4">Fragen zur KI & Sicherheit</h2>
        <div class="w-16 h-1 bg-purple-500 mx-auto rounded-full"></div>
      </div>
      
      <div class="space-y-4">
        {faqs.map((faq) => (
          <details class="group bg-[#0b0c10] border border-white/10 rounded-lg overflow-hidden transition-colors hover:border-white/20">
            <summary class="flex items-center justify-between p-5 cursor-pointer select-none">
              <h3 class="font-medium text-white pr-4">{faq.question}</h3>
              <span class="text-primary transition-transform duration-300 group-open:rotate-180">
                <Icon name="lucide:chevron-down" class="w-5 h-5" />
              </span>
            </summary>
            <div class="p-5 pt-0 text-text-muted text-sm leading-relaxed border-t border-white/5 mt-2">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section class="py-24 text-center bg-[#0b0c10]">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-white mb-6">Arbeite smarter, nicht härter.</h2>
      <p class="text-text-muted mb-8 max-w-xl mx-auto">
        Lass Carlo den Papierkram erledigen, während du Autos verkaufst.
      </p>
      <a href="https://garage.autaxo.de/auth/sign-up" class="inline-block px-8 py-4 bg-primary hover:bg-primary-hover text-white font-bold rounded-lg transition-colors shadow-lg shadow-primary/20">
        Kostenlos starten
      </a>
    </div>
  </section>

</MarketingLayout>