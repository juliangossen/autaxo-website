---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

const title = "Alle Funktionen | Autaxo Dealer-Management-System";
const description = "Von der digitalen Vertrags- und Steuerabwicklung bis zum KI-Assistenten. Entdecke alle Funktionen von Autaxo für den digitalen Autohandel.";

// Hier definieren wir alle Features zentral für sauberen Code
const features = [
  {
    title: "Digitale Verträge & eSignatur",
    text: "Erstelle rechtssichere Verkaufsverträge in Sekunden – inklusive digitaler Unterschrift. Autaxo spart dir Papierkram und macht deinen Fahrzeugverkauf vollständig digital.",
    icon: "lucide:pen-tool",
    href: "/digitale-vertraege-esignatur",
    isNew: false
  },
  {
    title: "Buchhaltung & Steuerlogik",
    text: "Autaxo berechnet automatisch die korrekte Umsatzsteuer – inklusive Differenzbesteuerung – und erstellt einen vollständigen DATEV-Export für deine Buchhaltung.",
    icon: "lucide:calculator",
    href: "/buchhaltung",
    isNew: false
  },
  {
    title: "Steuerlogik §25a UStG",
    text: "Autaxo erkennt alle umsatzsteuerlich relevanten Fälle im Autohandel automatisch und berechnet die Differenzbesteuerung korrekt. So bleibt deine Buchhaltung rechtssicher.",
    icon: "lucide:percent",
    href: "/differenzbesteuerung-25a-ustg",
    isNew: false
  },
  {
    title: "KI-Assistent Carlo",
    text: "Carlo ist dein Co-Pilot: per Foto Fahrzeugscheine scannen, Kunden anlegen und Dokumente zuordnen. Er erkennt den Steuerfall und gibt smarte Hinweise.",
    icon: "lucide:bot",
    href: "/ki-assistent",
    isNew: false
  },
  {
    title: "Schnittstellen (mobile.de)",
    text: "Übertrage Fahrzeugdaten automatisch auf mobile.de & AutoScout24. Inserate werden zentral verwaltet – ohne Doppeleingaben und manuelle Fehler.",
    icon: "lucide:share-2",
    href: "/faktura-rechnungen.astro",
    isNew: false
  },
  {
    title: "Dashboard & Analytics",
    text: "Verkaufszahlen, Durchschnittsmargen, Standzeiten und Lagerbestand – alles in einem übersichtlichen Dashboard live im Blick.",
    icon: "lucide:bar-chart-3",
    href: null,
    isNew: false
  },
  {
    title: "Filialverwaltung",
    text: "Arbeite gemeinsam mit deinem Team – egal ob Verkauf, Einkauf oder Buchhaltung. Auch mehrere Filialen verwaltest du zentral in einem System.",
    icon: "lucide:building-2",
    href: null,
    isNew: false
  },
  {
    title: "Datenschutz & GoBD",
    text: "Deine Daten liegen verschlüsselt auf sicheren Servern in Deutschland. Vollständig DSGVO- und GoBD-konform.",
    icon: "lucide:shield-check",
    href: "/datenschutz",
    isNew: false
  },
  {
    title: "Skalierbarkeit",
    text: "Autaxo wächst mit deinem Geschäft. Ideal für wachsende Händlerbetriebe mit digitalen Ambitionen.",
    icon: "lucide:trending-up",
    href: null,
    isNew: false
  },
  {
    title: "DATEV Buchungsdatenservice",
    text: "Übermittle Rechnungen und Kassendaten digital direkt an die Kanzlei. Nutze die native Schnittstelle für eine nahtlose, revisionssichere Buchhaltung ohne manuelle Doppelarbeit (Verfügbar ab Februar).",
    icon: "lucide:plug",
    href: null,
    isNew: true
  },
  {
    title: "Zentrales Rechnungsmanagement",
    text: "Erstelle sonstige Ausgangsrechnungen und erfasse alle Eingangsbelege zentral. Ordne Kosten direkt zu und ermittle so den echten Gewinn pro Fahrzeug (Verfügbar ab Februar).",
    icon: "lucide:receipt",
    href: "/faktura-rechnungen",
    isNew: true
  },
  {
    title: "KI-Fahrzeugbild-Optimierung",
    text: "Verwandle Schnappschüsse automatisch in Profi-Fotos. Unsere KI entfernt Hintergründe und optimiert die Darstellung für maximale Klickraten auf allen Fahrzeugbörsen (Verfügbar ab Februar).",
    icon: "lucide:image",
    href: null,
    isNew: true
  }
];

const partners = [
  {
    title: "Steuerberatung",
    text: "Berufsträger mit ausgewiesener KFZ-Handelsexpertise. Sicher in § 25a, igE/igL & Export. Nahtloses Zusammenspiel mit Autaxo & DATEV.",
    icon: "lucide:briefcase"
  },
  {
    title: "Laufende Buchhaltung",
    text: "Buchen lfd. Geschäftsvorfälle & Lohn GoBD-konform – auf Autaxo-Workflows ausgelegt. Transparent, zuverlässig, skalierbar.",
    icon: "lucide:book-open"
  },
  {
    title: "Prozess & Digitalisierung",
    text: "GoBD-Setup, Kassenbuch, E-Rechnung, DMS & KPI-Reporting. Beschleunigt den Autaxo-Rollout und schult Teams.",
    icon: "lucide:laptop"
  }
];
---

<MarketingLayout title={title} description={description}>

  <section class="relative pt-32 pb-20 bg-[#0b0c10] overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/10 via-[#0b0c10] to-[#0b0c10]"></div>

    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 tracking-tight text-balance">
        Alle Funktionen für deinen <br/>
        <span class="text-primary">digitalen Fahrzeughandel</span>
      </h1>
      <p class="text-xl text-text-muted max-w-3xl mx-auto leading-relaxed mb-10 text-balance">
        Von der digitalen Vertrags- und Steuerabwicklung über automatische Inserate bis zur Zusammenarbeit im Team – Autaxo bündelt alle Funktionen in einer Lösung.
      </p>
    </div>
  </section>

  <section class="py-20 bg-[#0b0c10]">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">

        {features.map((feature) => (
          feature.href ? (
            // KLICKBARE KARTE
            <a href={feature.href} class="group relative p-8 rounded-2xl bg-[#15171e] border border-white/10 hover:border-primary/50 transition-all duration-300 hover:-translate-y-1 block">
              <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary/0 via-primary/0 to-primary/0 group-hover:via-primary/50 transition-all duration-500"></div>

              <div class="flex items-center justify-between mb-6">
                <div class="w-12 h-12 rounded-lg bg-white/5 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-white transition-colors">
                  <Icon name={feature.icon} class="w-6 h-6" />
                </div>
                {feature.isNew && (
                  <span class="px-2 py-1 rounded text-xs font-bold bg-primary text-white uppercase tracking-wider">Neu</span>
                )}
              </div>

              <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2">
                {feature.title}
                <Icon name="lucide:arrow-right" class="w-4 h-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all" />
              </h3>
              <p class="text-text-muted leading-relaxed text-sm">
                {feature.text}
              </p>
            </a>
          ) : (
            // STATISCHE KARTE
            <div class="p-8 rounded-2xl bg-[#15171e] border border-white/5">
              <div class="flex items-center justify-between mb-6">
                <div class="w-12 h-12 rounded-lg bg-white/5 flex items-center justify-center text-text-muted">
                  <Icon name={feature.icon} class="w-6 h-6" />
                </div>
                {feature.isNew && (
                  <span class="px-2 py-1 rounded text-xs font-bold bg-primary text-white uppercase tracking-wider">Neu</span>
                )}
              </div>

              <h3 class="text-xl font-bold text-white mb-3">{feature.title}</h3>
              <p class="text-text-muted leading-relaxed text-sm">
                {feature.text}
              </p>
            </div>
          )
        ))}

      </div>
    </div>
  </section>

  <section class="py-24 bg-surface border-t border-white/5">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl font-bold text-white mb-4">Der Autaxo Partner-Finder</h2>
        <p class="text-text-muted">
          Wir empfehlen ausgewählte Steuerberatungskanzleien und Experten, die Erfahrung im Gebrauchtwagenhandel haben und mit der Autaxo-Logik arbeiten.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {partners.map((partner) => (
          <div class="p-6">
            <div class="w-16 h-16 mx-auto rounded-full bg-[#0b0c10] border border-white/10 flex items-center justify-center text-primary mb-6 shadow-lg shadow-primary/5">
              <Icon name={partner.icon} class="w-8 h-8" />
            </div>
            <h3 class="text-lg font-bold text-white mb-3">{partner.title}</h3>
            <p class="text-sm text-text-muted leading-relaxed">{partner.text}</p>
          </div>
        ))}
      </div>

      <div class="mt-12">
        <a href="/partnernetzwerk" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border border-white/20 hover:bg-white/10 text-white transition-colors">
          Zum Partnernetzwerk
          <Icon name="lucide:arrow-right" class="w-4 h-4" />
        </a>
      </div>
    </div>
  </section>

  <section class="py-24 text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">Bereit für den digitalen Handel?</h2>
      <a href="https://garage.autaxo.de/auth/sign-up" class="inline-block px-8 py-4 bg-primary hover:bg-primary-hover text-white font-bold rounded-lg transition-colors shadow-lg shadow-primary/20">
        Jetzt kostenlos testen
      </a>
    </div>
  </section>

</MarketingLayout>
