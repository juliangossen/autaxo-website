---
import { siteConfig } from '@/config';
import { navigation } from '@/config';
import { Icon } from 'astro-icon/components';

const { footer } = navigation;
const { social } = siteConfig;

// Wir holen uns das aktuelle Jahr für das Copyright automatisch
const currentYear = new Date().getFullYear();

// Hilfsfunktion: Links filtern, falls Features deaktiviert sind (Robustheit)
// Falls eine Kategorie leer ist, nehmen wir ein leeres Array [], damit nichts abstürzt.
const productLinks = footer.product || [];
const solutionLinks = footer.solutions || [];
const companyLinks = footer.company || [];
const legalLinks = footer.legal || [];
---

<footer class="bg-[#0b0c10] border-t border-white/5 pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 mb-12">
      
      <div class="col-span-2 lg:col-span-2">
        <a href="/" class="flex items-center gap-2 mb-4">
          <img src="/logo.svg" alt="Autaxo Logo" class="h-8 w-auto" />
          <span class="text-xl font-bold text-white tracking-tight">Autaxo</span>
        </a>
        <p class="text-gray-400 text-sm leading-relaxed max-w-xs mb-6">
          Die spezialisierte Software für den freien Autohandel. 
          Digitale Fahrzeugakte, §25a Steuerlogik und DATEV-Export.
          Made & Hosted in Germany.
        </p>
        
        <div class="flex gap-4">
          {social?.instagram && (
            <a href={social.instagram} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary transition-colors">
              <span class="sr-only">Instagram</span>
              <Icon name="lucide:instagram" class="w-5 h-5" />
            </a>
          )}
          {social?.youtube && (
            <a href={social.youtube} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary transition-colors">
              <span class="sr-only">YouTube</span>
              <Icon name="lucide:youtube" class="w-5 h-5" />
            </a>
          )}
          {social?.linkedin && (
            <a href={social.linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary transition-colors">
              <span class="sr-only">LinkedIn</span>
              <Icon name="lucide:linkedin" class="w-5 h-5" />
            </a>
          )}
        </div>
      </div>

      <div>
        <h3 class="text-white font-semibold mb-4">Produkt</h3>
        <ul class="space-y-3">
          {productLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-white font-semibold mb-4">Ressourcen</h3>
        <ul class="space-y-3">
          {solutionLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-white font-semibold mb-4">Unternehmen</h3>
        <ul class="space-y-3">
          {companyLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
          {legalLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

    </div>

    <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-500 text-xs">
        &copy; {currentYear} GOBERU Solutions UG (haftungsbeschränkt). Alle Rechte vorbehalten.
      </p>
      
      <div class="flex items-center gap-6">
        <div class="flex items-center gap-2 text-gray-500 text-xs">
          <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
          <span>Alle Systeme operativ</span>
        </div>
      </div>
    </div>
  </div>
</footer>