---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

// Metadaten
const title = "Autaxo Training | Video-Tutorials & Hilfe";
const description = "Lerne Autaxo kennen: Schritt-für-Schritt Video-Anleitungen zur Fahrzeugeinrichtung, Steuerlogik und Stammdatenverwaltung.";

// Video Daten (Zentralisiert für einfache Wartung & Schema-Generierung)
const videos = [
  {
    id: "J2U9Hmmpqhc", // Stammdaten Video
    title: "Schritt 1: Stammdaten & Grundeinstellungen",
    description: "Das Fundament: So richtest du dein Firmenprofil, Briefköpfe und Nutzerrechte korrekt ein, bevor du das erste Auto verkaufst.",
    uploadDate: "2023-01-01", // Kann angepasst werden, wichtig für Schema
    thumbnail: "https://i.ytimg.com/vi/J2U9Hmmpqhc/maxresdefault.jpg"
  },
  {
    id: "vAAAxkRt_tY", // Verkauf Video
    title: "Schritt 2: Fahrzeug anlegen & verkaufen",
    description: "Der Kernprozess: Fahrzeugankauf, automatische Steuerlogik (Differenz/Regel) und rechtssicherer Rechnungsdruck in Echtzeit.",
    uploadDate: "2023-01-01",
    thumbnail: "https://i.ytimg.com/vi/vAAAxkRt_tY/maxresdefault.jpg"
  }
];

// Schema.org VideoObject Generierung
const schema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": videos.map((video, index) => ({
    "@type": "VideoObject",
    "position": index + 1,
    "name": video.title,
    "description": video.description,
    "thumbnailUrl": video.thumbnail,
    "uploadDate": video.uploadDate,
    "embedUrl": `https://www.youtube.com/embed/${video.id}`,
    "contentUrl": `https://www.youtube.com/watch?v=${video.id}`
  }))
};
---

<MarketingLayout title={title} description={description}>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(schema)} />

  <section class="relative pt-32 pb-16 bg-[#0b0c10] overflow-hidden">
    <div class="absolute top-0 right-0 w-[800px] h-[600px] bg-primary/5 blur-[120px] rounded-full pointer-events-none -z-10"></div>

    <div class="container mx-auto px-4 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-primary text-sm font-medium mb-6">
        <Icon name="lucide:graduation-cap" class="w-4 h-4" />
        Autaxo Academy
      </div>
      
      <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 tracking-tight">
        Bringe deinen Autohandel auf das <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-primary-light">nächste Level.</span>
      </h1>
      
      <p class="text-lg md:text-xl text-text-muted max-w-2xl mx-auto leading-relaxed">
        Kompakte Video-Trainings, damit du und dein Team Autaxo in Minuten beherrscht. Keine Handbücher wälzen, einfach zuschauen und nachmachen.
      </p>
    </div>
  </section>

  <section class="pb-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        
        {videos.map((video) => (
          <article class="flex flex-col bg-[#15171e] border border-white/10 rounded-2xl overflow-hidden hover:border-primary/30 transition-all duration-300 group">
            <div class="relative w-full aspect-video bg-black">
              <iframe 
                src={`https://www.youtube-nocookie.com/embed/${video.id}?rel=0&modestbranding=1`}
                title={video.title}
                class="absolute top-0 left-0 w-full h-full"
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
                loading="lazy"
              ></iframe>
            </div>
            
            <div class="p-8 flex-1 flex flex-col">
              <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary transition-colors">
                {video.title}
              </h3>
              <p class="text-text-muted leading-relaxed text-sm flex-1">
                {video.description}
              </p>
            </div>
          </article>
        ))}

      </div>
    </div>
  </section>

  <section class="py-20 bg-[#0f1117] border-t border-white/5">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold text-white mb-8">Noch Fragen offen?</h2>
      
      <div class="grid sm:grid-cols-2 gap-4 max-w-lg mx-auto">
        <a href="/faq" class="group flex items-center justify-center gap-3 p-5 rounded-xl bg-[#15171e] border border-white/10 hover:border-primary/50 transition-all hover:-translate-y-1">
          <div class="bg-white/5 p-2 rounded-lg text-white group-hover:text-primary transition-colors">
            <Icon name="lucide:help-circle" class="w-6 h-6" />
          </div>
          <div class="text-left">
            <span class="block text-sm text-text-muted">Häufige Fragen</span>
            <span class="block text-white font-bold">Zu den FAQ</span>
          </div>
        </a>

        <a href="/kontakt" class="group flex items-center justify-center gap-3 p-5 rounded-xl bg-[#15171e] border border-white/10 hover:border-primary/50 transition-all hover:-translate-y-1">
          <div class="bg-white/5 p-2 rounded-lg text-white group-hover:text-primary transition-colors">
            <Icon name="lucide:mail" class="w-6 h-6" />
          </div>
          <div class="text-left">
            <span class="block text-sm text-text-muted">Persönlicher Support</span>
            <span class="block text-white font-bold">Kontakt aufnehmen</span>
          </div>
        </a>
      </div>

    </div>
  </section>

</MarketingLayout>