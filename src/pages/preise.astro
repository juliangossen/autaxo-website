---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

// 1. METADATEN
const title = "Preise & Tarife | Autaxo DMS";
const description = "Ein Preis, alles drin. Keine versteckten Kosten, monatlich kündbar. Starten Sie jetzt mit Ihrer 30-tägigen kostenlosen Testphase.";

// 2. FAQ DATEN (Preisspezifisch)
const faqs = [
  {
    question: "Gibt es eine Einrichtungsgebühr?",
    answer: "Nein. Sie zahlen nur die monatliche Gebühr. Die Einrichtung und der Import Ihrer Bestandsdaten sind selbsterklärend und kostenlos."
  },
  {
    question: "Wie lange ist die Vertragslaufzeit?",
    answer: "Wir mögen keine Knebelverträge. Autaxo ist monatlich kündbar. Wenn Sie nicht zufrieden sind, können Sie jederzeit zum Monatsende gehen."
  },
  {
    question: "Was passiert nach der Testphase?",
    answer: "Nichts Automatisches. Sie müssen aktiv Ihre Zahlungsdaten hinterlegen, um Autaxo weiter zu nutzen. Es gibt keine Abo-Falle."
  },
  {
    question: "Sind Updates inklusive?",
    answer: "Ja. Als Cloud-Software spielen wir Updates, neue Features (wie den KI-Assistenten) und rechtliche Anpassungen automatisch ein. Ohne Zusatzkosten."
  }
];

const featuresOne = [
  "Unbegrenzte Fahrzeuge",
  "Unbegrenzte Verträge & Rechnungen",
  "KI-Assistent Carlo inklusive",
  "DATEV-Export & Steuerlogik",
  "Digitale Fahrzeugakte",
  "FIN-Abfrage (Scanner)",
  "Mobile App Nutzung",
  "Kostenloser Support"
];
---

<MarketingLayout title={title} description={description}>

  <section class="relative pt-32 pb-20 bg-[#0b0c10] overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/10 via-[#0b0c10] to-[#0b0c10]"></div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 tracking-tight">
        Ein Preis. <span class="text-primary">Alles drin.</span>
      </h1>
      <p class="text-xl text-text-muted max-w-2xl mx-auto leading-relaxed mb-8">
        Keine komplizierten Module. Keine versteckten Kosten. <br>
        Starten Sie mit voller Power in den digitalen Fahrzeughandel.
      </p>

      <div class="flex flex-wrap justify-center gap-4 md:gap-8 text-sm font-medium text-white/60">
        <span class="flex items-center gap-2">
          <Icon name="lucide:check" class="text-primary" /> Monatlich kündbar
        </span>
        <span class="flex items-center gap-2">
          <Icon name="lucide:check" class="text-primary" /> Made in Germany
        </span>
        <span class="flex items-center gap-2">
          <Icon name="lucide:check" class="text-primary" /> DSGVO-konform
        </span>
      </div>
    </div>
  </section>

  <section class="pb-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8 items-start">
        
        <div class="p-8 rounded-2xl bg-[#15171e] border border-white/5 relative">
          <h3 class="text-2xl font-bold text-white mb-2">Testphase</h3>
          <p class="text-text-muted text-sm mb-6">Lernen Sie Autaxo unverbindlich kennen.</p>
          
          <div class="mb-8">
            <span class="text-5xl font-extrabold text-white">0 €</span>
            <span class="text-text-muted"> / 30 Tage</span>
          </div>

          <a href="https://garage.autaxo.de/auth/sign-up" class="block w-full py-4 rounded-lg border border-white/20 text-white font-bold text-center hover:bg-white/5 transition-all mb-8">
            Jetzt testen
          </a>

          <ul class="space-y-4 text-text-muted text-sm">
            <li class="flex gap-3">
              <Icon name="lucide:check" class="w-5 h-5 text-white shrink-0" />
              <span>Voller Funktionsumfang</span>
            </li>
            <li class="flex gap-3">
              <Icon name="lucide:check" class="w-5 h-5 text-white shrink-0" />
              <span>Keine Kreditkarte nötig</span>
            </li>
            <li class="flex gap-3">
              <Icon name="lucide:check" class="w-5 h-5 text-white shrink-0" />
              <span>Endet automatisch</span>
            </li>
          </ul>
        </div>

        <div class="p-8 rounded-2xl bg-[#15171e] border-2 border-primary relative shadow-2xl shadow-primary/10 transform md:-translate-y-4">
          
          <div class="absolute top-0 right-0 -mt-4 mr-4 bg-primary text-white text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider shadow-lg">
            Bestseller
          </div>

          <h3 class="text-2xl font-bold text-white mb-2">Autaxo ONE</h3>
          <p class="text-text-muted text-sm mb-6">Die Komplettlösung für professionelle Händler.</p>
          
          <div class="mb-8">
            <span class="text-5xl font-extrabold text-white">49 €</span>
            <span class="text-text-muted"> / Monat</span>
            <p class="text-xs text-text-muted mt-2">zzgl. MwSt., monatlich kündbar</p>
          </div>

          <a href="https://garage.autaxo.de/auth/sign-up" class="block w-full py-4 rounded-lg bg-primary hover:bg-primary-hover text-white font-bold text-center transition-all shadow-lg shadow-primary/25 mb-8">
            Vollversion starten
          </a>

          <div class="space-y-4">
            <p class="text-white font-bold text-sm uppercase tracking-wide border-b border-white/10 pb-2 mb-4">Alles inklusive:</p>
            <ul class="space-y-4 text-white text-sm">
              {featuresOne.map((feat) => (
                <li class="flex gap-3 items-center">
                  <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center shrink-0">
                    <Icon name="lucide:check" class="w-3.5 h-3.5 text-primary" />
                  </div>
                  <span>{feat}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

      </div>
    </div>
  </section>

  <section class="py-24 bg-surface border-t border-white/5">
    <div class="container mx-auto px-4 max-w-3xl">
      <h2 class="text-2xl font-bold text-white mb-12 text-center">Häufige Fragen zur Abrechnung</h2>
      <div class="space-y-4">
        {faqs.map((faq) => (
          <details class="group bg-[#0b0c10] border border-white/10 rounded-lg overflow-hidden transition-colors hover:border-white/20">
            <summary class="flex items-center justify-between p-5 cursor-pointer select-none">
              <h3 class="font-medium text-white pr-4">{faq.question}</h3>
              <span class="text-primary transition-transform duration-300 group-open:rotate-180">
                <Icon name="lucide:chevron-down" class="w-5 h-5" />
              </span>
            </summary>
            <div class="p-5 pt-0 text-text-muted text-sm leading-relaxed border-t border-white/5 mt-2">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section class="py-24 text-center bg-[#0b0c10]">
    <div class="container mx-auto px-4">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-white/5 text-white mb-6 border border-white/10">
        <Icon name="lucide:message-circle" class="w-8 h-8" />
      </div>
      <h2 class="text-3xl font-bold text-white mb-4">Noch unsicher?</h2>
      <p class="text-text-muted mb-8 max-w-xl mx-auto">
        Wir beraten dich persönlich und beantworten gerne all deine Fragen.
      </p>
      <a href="/kontakt" class="inline-block px-8 py-4 bg-white/5 hover:bg-white/10 text-white font-bold rounded-lg border border-white/10 transition-all">
        Kontakt aufnehmen
      </a>
    </div>
  </section>

</MarketingLayout>