---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

// Metadaten für SEO & GEO (Fokus auf deutschen Rechtsraum)
const title = "Downloads & Vorlagen für Autohändler (PDF) | Autaxo";
const description = "Kostenlose Muster & Vorlagen: Gelangensbestätigung, AVV, KYC-Formular und Übergabeprotokolle. Rechtssicher für den KFZ-Handel in Deutschland.";

// Zentrale Datenstruktur für einfache Wartung & Schema-Generierung
const downloads = [
  {
    category: "Recht & Datenschutz",
    items: [
      {
        title: "Allgemeine Geschäftsbedingungen (AGB)",
        description: "Rechtssichere Muster-AGB für den B2B- und B2C-Fahrzeughandel. Unverzichtbar für jeden Verkauf.",
        link: "https://drive.google.com/uc?export=download&id=1wocZ3O-4_WaJxfS7K2RHaA-oNVZwF8fQ",
        icon: "lucide:scale",
        automatedInAutaxo: false
      },
      {
        title: "AVV-Vertrag (Auftragsverarbeitung)",
        description: "Gemäß Art. 28 DSGVO. Notwendig, wenn Sie Kundendaten digital verarbeiten lassen (z.B. durch Autaxo).",
        link: "https://drive.google.com/uc?export=download&id=1j-WnMIpgFIECIEE8o_R6qXmuKjvyzvpf",
        icon: "lucide:shield-check",
        automatedInAutaxo: true
      }
    ]
  },
  {
    category: "Fahrzeugverkauf & Export",
    items: [
      {
        title: "Gelangensbestätigung (EU-Export)",
        description: "Der zwingende Nachweis für steuerfreie innergemeinschaftliche Lieferungen ins EU-Ausland.",
        link: "https://drive.google.com/uc?export=download&id=1J16mt2lo85P4ShEtuqhC94JgQw03s8XA",
        icon: "lucide:plane",
        automatedInAutaxo: true
      },
      {
        title: "Fahrzeug-Übernahmeprotokoll",
        description: "Dokumentieren Sie Mängel und Zubehör bei Ankauf oder Verkauf lückenlos. Vermeiden Sie Streitigkeiten.",
        link: "https://drive.google.com/uc?export=download&id=1X54ahNDhnMh3YIBPtolKlfCG2CPglZ_5",
        icon: "lucide:clipboard-check",
        automatedInAutaxo: true
      },
      {
        title: "KYC-Formular (Geldwäschegesetz)",
        description: "Know Your Customer: Dokumentationspflicht nach dem GwG bei Bargeldgeschäften über 10.000 €.",
        link: "https://drive.google.com/uc?export=download&id=1lGC6eRxOmr3xcO7arCo6DRoYdqwzDHfF",
        icon: "lucide:user-check",
        automatedInAutaxo: true
      }
    ]
  },
  {
    category: "Technik & API",
    items: [
      {
        title: "mobile.de Seller API Anleitung",
        description: "Technische Dokumentation zur Anbindung Ihres Bestands an mobile.de via Schnittstelle.",
        link: "https://drive.google.com/uc?export=download&id=1f4AMzu-EGkMltbCTnJKU1deOM5rH6W25",
        icon: "lucide:code-2",
        automatedInAutaxo: true
      }
    ]
  }
];

// JSON-LD Schema: Definiert die Seite als Collection von Downloads
const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": title,
  "description": description,
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": downloads.flatMap(cat =>
      cat.items.map(item => ({
        "@type": "DigitalDocument",
        "name": item.title,
        "description": item.description,
        "url": item.link,
        "fileFormat": "application/pdf"
      }))
    )
  }
};
---

<MarketingLayout title={title} description={description}>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(schema)} />

  {/* HERO */}
  <section class="relative pt-32 pb-16 bg-[#0b0c10] overflow-hidden">
    {/* ✅ Kontrast-Overlay (dunkelt den Hintergrund hinter Text leicht ab) */}
    <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/55 to-black/75 pointer-events-none -z-10"></div>

    {/* ✅ Glow etwas stärker + sauber hinter Content */}
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[420px] bg-primary/15 blur-[140px] rounded-full pointer-events-none -z-10"></div>

    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-red-400 text-sm font-medium mb-6">
        <Icon name="lucide:download" class="w-4 h-4" />
        Ressourcen Center
      </div>

      <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 tracking-tight leading-tight">
        Wichtige Vorlagen <br class="hidden md:block" />
        {/* ✅ Gleicher, kontrastreicher Verlauf wie über-uns.astro + leichte Tiefe */}
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-red-400 drop-shadow-[0_12px_35px_rgba(239,68,68,0.35)]">
          kostenlos herunterladen.
        </span>
      </h1>

      {/* ✅ Text etwas heller für Lesbarkeit */}
      <p class="text-white/70 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
        Wir unterstützen deinen Autohandel mit rechtssicheren Mustervorlagen für den täglichen Gebrauch. Einfach als PDF laden und nutzen.
      </p>
    </div>
  </section>

  <section class="pb-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4">

      <div class="space-y-16">
        {downloads.map((category) => (
          <div>
            <h3 class="text-2xl font-bold text-white mb-8 border-l-4 border-primary pl-4">
              {category.category}
            </h3>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              {category.items.map((item) => (
                <div class="group relative bg-[#15171e] border border-white/10 rounded-xl p-6 hover:border-primary/40 transition-all hover:-translate-y-1 flex flex-col h-full">

                  {/* Icon & Title */}
                  <div class="flex items-start justify-between mb-4">
                    <div class="bg-white/5 p-3 rounded-lg text-primary group-hover:bg-primary/10 transition-colors">
                      <Icon name={item.icon} class="w-6 h-6" />
                    </div>
                    {item.automatedInAutaxo && (
                      <div class="px-2 py-1 bg-green-500/10 border border-green-500/20 rounded text-[10px] uppercase font-bold text-green-400 tracking-wider">
                        In Autaxo automatisiert
                      </div>
                    )}
                  </div>

                  <h4 class="text-xl font-bold text-white mb-2 group-hover:text-primary transition-colors">
                    {item.title}
                  </h4>

                  <p class="text-text-muted text-sm leading-relaxed mb-6 flex-1">
                    {item.description}
                  </p>

                  <a
                    href={item.link}
                    target="_blank"
                    rel="noopener"
                    class="inline-flex items-center justify-center gap-2 w-full py-3 bg-white/5 hover:bg-white/10 text-white rounded-lg font-medium transition-all border border-white/5 hover:border-white/20"
                  >
                    <Icon name="lucide:download" class="w-4 h-4" />
                    PDF Downloaden
                  </a>

                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <div class="mt-24 bg-gradient-to-br from-[#1a1d26] to-[#15171e] border border-white/10 rounded-2xl p-8 md:p-12 text-center relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-primary/10 blur-[80px] rounded-full pointer-events-none"></div>

        <div class="relative z-10 max-w-3xl mx-auto">
          <h3 class="text-2xl md:text-3xl font-bold text-white mb-4">
            Genug vom manuellen Ausfüllen?
          </h3>
          <p class="text-text-muted text-lg mb-8">
            Warum PDFs händisch ausfüllen und Fehler riskieren? <br />
            <strong>Autaxo</strong> füllt Gelangensbestätigungen, Verträge und Protokolle automatisch mit den Daten aus deinem Fahrzeugbestand.
          </p>
          <a href="/preise" class="inline-flex items-center gap-2 px-8 py-4 bg-primary text-white font-bold rounded-full hover:bg-primary-dark transition-all shadow-lg hover:shadow-primary/25 transform hover:scale-105">
            <Icon name="lucide:zap" class="w-5 h-5" />
            Jetzt Automatisierung testen
          </a>
          <p class="mt-4 text-xs text-text-muted">30 Tage kostenlos. Keine Kreditkarte erforderlich.</p>
        </div>
      </div>

    </div>
  </section>
</MarketingLayout>
