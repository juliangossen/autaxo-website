---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

const title = "Kontakt aufnehmen | Autaxo Support & Vertrieb";
const description = "Du hast Fragen zu Autaxo oder benötigst Hilfe? Kontaktiere unser Team in Deutschland per WhatsApp, E-Mail oder Formular.";

// Schema.org für Lokales Unternehmen + Support Kanäle
const schema = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "GOBERU Solutions UG (haftungsbeschränkt)",
  "image": "https://www.autaxo.de/logo.svg",
  "url": "https://www.autaxo.de",
  "email": "info@autaxo.de",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Hattingen",
    "addressRegion": "NRW",
    "addressCountry": "DE"
  },
  "contactPoint": [
    {
      "@type": "ContactPoint",
      "contactType": "customer support",
      "telephone": "+49-155-65128070",
      "contactOption": "TollFree",
      "areaServed": "DE"
    }
  ]
};
---

<MarketingLayout title={title} description={description}>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(schema)} />

  <section class="relative pt-32 pb-12 bg-[#0b0c10] overflow-hidden">
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-primary/5 blur-[120px] rounded-full pointer-events-none -z-10"></div>
    
    <div class="container mx-auto px-4 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-primary text-sm font-medium mb-6">
        <Icon name="lucide:message-circle" class="w-4 h-4" />
        Wir sind für dich da
      </div>
      
      <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-6">
        Wie können wir dir helfen?
      </h1>
      
      <p class="text-lg text-text-muted max-w-2xl mx-auto leading-relaxed">
        Egal ob per WhatsApp, E-Mail oder Formular – unser Team in Deutschland freut sich auf deine Nachricht.
      </p>
    </div>
  </section>

  <section class="pb-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4">
      
      <div class="grid lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        
        <div class="space-y-6 lg:col-span-1">
          
          <div class="bg-[#15171e] border border-white/10 rounded-2xl p-6 hover:border-[#25D366]/50 transition-all group relative overflow-hidden">
            <div class="absolute top-0 right-0 w-20 h-20 bg-[#25D366]/10 blur-[30px] rounded-full pointer-events-none"></div>
            
            <div class="w-12 h-12 bg-[#25D366]/10 rounded-xl flex items-center justify-center mb-4 text-[#25D366] group-hover:scale-110 transition-transform">
              <Icon name="lucide:message-circle" class="w-6 h-6" />
            </div>
            <h3 class="text-white font-bold text-lg mb-2">WhatsApp Chat</h3>
            <p class="text-text-muted text-sm mb-4">Der schnellste Weg für kurze Fragen.</p>
            
            <a href="https://wa.me/4915565128070" target="_blank" class="w-full py-3 bg-[#25D366] text-white font-bold rounded-lg hover:brightness-110 transition-all flex items-center justify-center gap-2 shadow-lg shadow-[#25D366]/20">
               <Icon name="lucide:message-circle" class="w-5 h-5" />
               Jetzt chatten
            </a>
          </div>

          <div class="bg-[#15171e] border border-white/10 rounded-2xl p-6 hover:border-primary/30 transition-all group">
            <div class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center mb-4 text-primary group-hover:scale-110 transition-transform">
              <Icon name="lucide:mail" class="w-6 h-6" />
            </div>
            <h3 class="text-white font-bold text-lg mb-2">E-Mail</h3>
            <p class="text-text-muted text-sm mb-4">Für ausführliche Anfragen & Dokumente.</p>
            <a href="mailto:info@autaxo.de" class="text-primary font-medium hover:text-white transition-colors flex items-center gap-2">
              info@autaxo.de
              <Icon name="lucide:arrow-right" class="w-4 h-4" />
            </a>
          </div>

          <div class="bg-[#15171e] border border-white/10 rounded-2xl p-6 hover:border-primary/30 transition-all group">
            <div class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center mb-4 text-white group-hover:scale-110 transition-transform">
              <Icon name="lucide:help-circle" class="w-6 h-6" />
            </div>
            <h3 class="text-white font-bold text-lg mb-2">Hilfe Center</h3>
            <p class="text-text-muted text-sm mb-4">Anleitungen & Antworten sofort finden.</p>
            <a href="/faq" class="text-white font-medium hover:text-primary transition-colors flex items-center gap-2">
              Zu den FAQ
              <Icon name="lucide:arrow-right" class="w-4 h-4" />
            </a>
          </div>

          <div class="p-6 rounded-2xl border border-white/5 bg-white/[0.02]">
            <h4 class="text-white font-bold text-sm uppercase tracking-wider mb-4 opacity-70">Unternehmenssitz</h4>
            <address class="not-italic text-text-muted text-sm leading-relaxed">
              <strong class="text-white">GOBERU Solutions UG</strong><br/>
              (haftungsbeschränkt)<br/>
              Hattingen, NRW<br/>
              Deutschland
            </address>
          </div>

        </div>

        <div class="lg:col-span-2">
          <div class="bg-[#15171e] border border-white/10 rounded-2xl p-8 md:p-10 shadow-2xl relative overflow-hidden h-full">
            <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 blur-[60px] rounded-full pointer-events-none"></div>

            <h3 class="text-2xl font-bold text-white mb-6 relative z-10">Kontaktformular</h3>

            <form class="space-y-6 relative z-10" action="https://formspree.io/f/YOUR_ID" method="POST">
              
              <div class="grid md:grid-cols-2 gap-6">
                <div class="space-y-2">
                  <label for="name" class="text-sm font-medium text-white">Dein Name</label>
                  <input type="text" id="name" name="name" required class="w-full bg-[#0b0c10] border border-white/10 rounded-lg px-4 py-3 text-white focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all" placeholder="Max Mustermann" />
                </div>
                <div class="space-y-2">
                  <label for="email" class="text-sm font-medium text-white">E-Mail Adresse</label>
                  <input type="email" id="email" name="email" required class="w-full bg-[#0b0c10] border border-white/10 rounded-lg px-4 py-3 text-white focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all" placeholder="max@autohandel.de" />
                </div>
              </div>

              <div class="space-y-2">
                <label for="subject" class="text-sm font-medium text-white">Worum geht es?</label>
                <div class="relative">
                  <select id="subject" name="subject" class="w-full bg-[#0b0c10] border border-white/10 rounded-lg px-4 py-3 text-white appearance-none focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all">
                    <option value="sales">Interesse an Autaxo (Vertrieb)</option>
                    <option value="support">Hilfe bei der Bedienung (Support)</option>
                    <option value="partner">Partnerschaft</option>
                  </select>
                  <Icon name="lucide:chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-4 h-4 text-white/50 pointer-events-none" />
                </div>
              </div>

              <div class="space-y-2">
                <label for="message" class="text-sm font-medium text-white">Deine Nachricht</label>
                <textarea id="message" name="message" rows="5" required class="w-full bg-[#0b0c10] border border-white/10 rounded-lg px-4 py-3 text-white focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all resize-none" placeholder="Wie können wir helfen?"></textarea>
              </div>

              <div class="flex items-start gap-3 pt-2">
                <div class="flex items-center h-5">
                  <input id="privacy" name="privacy" type="checkbox" required class="w-4 h-4 rounded border-white/20 bg-[#0b0c10] text-primary focus:ring-primary/50" />
                </div>
                <div class="text-sm text-text-muted">
                  <label for="privacy" class="font-medium text-white cursor-pointer">Datenschutz akzeptieren</label>
                  <p class="text-xs mt-1">Ich stimme der Speicherung meiner Daten zur Kontaktaufnahme zu. <a href="/datenschutz" class="text-primary hover:underline">Datenschutzerklärung</a>.</p>
                </div>
              </div>

              <button type="submit" class="w-full py-4 bg-gradient-to-r from-primary to-primary-light text-white font-bold rounded-lg shadow-lg hover:shadow-primary/25 hover:opacity-90 transition-all flex items-center justify-center gap-2">
                <Icon name="lucide:send" class="w-5 h-5" />
                Nachricht absenden
              </button>

            </form>
          </div>
        </div>

      </div>
    </div>
  </section>

</MarketingLayout>