---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

// Metadaten
const title = "Autaxo auf der Essen Motor Show 2026";
const description = "Triff uns live! Sichere dir deinen Termin für eine persönliche Demo, Gratis-Kaffee und den exklusiven Messe-Bonus.";

// Zieldatum für den Countdown (aus dem Original übernommen)
const targetDate = "2026-11-27T10:00:00"; 
---

<MarketingLayout title={title} description={description}>

  <section class="relative pt-32 pb-16 md:pt-48 md:pb-32 overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full bg-[#0b0c10] -z-20"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[500px] bg-primary/20 blur-[120px] rounded-full -z-10 pointer-events-none"></div>

    <div class="container mx-auto px-4 text-center z-10 relative">
      
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 backdrop-blur-md mb-8">
        <span class="relative flex h-3 w-3">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-500 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
        </span>
        <span class="text-sm font-medium text-white tracking-wide uppercase">Essen Motor Show 2026</span>
      </div>

      <h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold text-white mb-6 tracking-tight leading-tight">
        Triff uns live <br class="hidden md:block" />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-primary-light">auf der EMS.</span>
      </h1>

      <p class="text-lg md:text-xl text-text-muted max-w-2xl mx-auto mb-10 leading-relaxed">
        Erlebe, wie Autohandel heute funktioniert. Wir schalten die Buchhaltung deines Autohandels auf Turbo.
      </p>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-2xl mx-auto mb-12" id="countdown-wrapper">
        <div class="bg-[#15171e] border border-white/10 p-4 rounded-xl">
          <span class="block text-3xl md:text-4xl font-bold text-white font-mono" id="days">--</span>
          <span class="text-xs text-text-muted uppercase tracking-wider">Tage</span>
        </div>
        <div class="bg-[#15171e] border border-white/10 p-4 rounded-xl">
          <span class="block text-3xl md:text-4xl font-bold text-white font-mono" id="hours">--</span>
          <span class="text-xs text-text-muted uppercase tracking-wider">Stunden</span>
        </div>
        <div class="bg-[#15171e] border border-white/10 p-4 rounded-xl">
          <span class="block text-3xl md:text-4xl font-bold text-white font-mono" id="minutes">--</span>
          <span class="text-xs text-text-muted uppercase tracking-wider">Minuten</span>
        </div>
        <div class="bg-[#15171e] border border-white/10 p-4 rounded-xl">
          <span class="block text-3xl md:text-4xl font-bold text-white font-mono" id="seconds">--</span>
          <span class="text-xs text-text-muted uppercase tracking-wider">Sekunden</span>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="#termin" class="w-full sm:w-auto px-8 py-4 bg-primary text-white font-bold rounded-full hover:bg-primary-dark transition-all shadow-[0_0_20px_rgba(var(--color-primary),0.4)] transform hover:scale-105">
          Jetzt Termin am Stand sichern
        </a>
      </div>
    </div>
  </section>

  <section class="py-20 bg-[#0b0c10] border-t border-white/5">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Warum sich ein Besuch lohnt</h2>
        <p class="text-text-muted">Komm vorbei, lern uns kennen und nimm mehr mit als nur einen Flyer.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="bg-[#15171e] p-8 rounded-2xl border border-white/10 hover:border-primary/50 transition-colors group">
          <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary/20 transition-colors">
            <Icon name="lucide:zap" class="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Live-Demo Speedrun</h3>
          <p class="text-text-muted leading-relaxed">
            Keine langweiligen Präsentationen. Wir zeigen dir in unter 60 Sekunden, wie du ein komplettes Fahrzeug GoBD-konform an- und verkaufst.
          </p>
        </div>

        <div class="bg-[#15171e] p-8 rounded-2xl border border-white/10 hover:border-primary/50 transition-colors group">
          <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary/20 transition-colors">
            <Icon name="lucide:coffee" class="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Gratis-Kaffee & Merch</h3>
          <p class="text-text-muted leading-relaxed">
            Tanke bei uns mit dem besten Kaffee der Messe auf und sichere dir exklusive Autaxo-Sticker, Becher und weitere Goodies.
          </p>
        </div>

        <div class="bg-[#15171e] p-8 rounded-2xl border border-white/10 hover:border-primary/50 transition-colors group">
          <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary/20 transition-colors">
            <Icon name="lucide:gift" class="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Exklusiver Messe-Bonus</h3>
          <p class="text-text-muted leading-relaxed">
            Nur für Besucher: Sichere dir Autaxo <strong>2 Monate komplett gratis</strong>, inklusive eines persönlichen Onboarding-Workshops.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="termin" class="py-24 bg-[#0f1117]">
    <div class="container mx-auto px-4 max-w-4xl text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Termin am Stand sichern</h2>
      <p class="text-text-muted mb-10">
        Wartezeiten vermeiden? Reserviere dir hier deinen persönlichen Demo-Slot.
      </p>

      <div class="bg-white rounded-xl overflow-hidden shadow-2xl">
        <iframe 
          src="https://calendar.google.com/calendar/appointments/schedules/AcZssZ2Dkm8CQETnWLgzTjl4ENNMkQ2NEPwF_1FT_PShm8kl-VHtf1o1zFJ5S2n6WU3EzYQxAlvrGz_S?gv=true" 
          style="border: 0" 
          width="100%" 
          height="600" 
          frameborder="0"
          loading="lazy"
          title="Autaxo Terminbuchung"
        ></iframe>
      </div>
    </div>
  </section>

  <section class="py-20 bg-[#0b0c10] text-center">
    <div class="container mx-auto px-4">
      <h3 class="text-2xl font-bold text-white mb-6">Noch Fragen zur Messe?</h3>
      <a href="mailto:kontakt@autaxo.de" class="inline-flex items-center gap-2 text-text-muted hover:text-white transition-colors">
        <Icon name="lucide:mail" class="w-5 h-5" />
        kontakt@autaxo.de
      </a>
    </div>
  </section>

  <script define:vars={{ targetDate }}>
    // Countdown Logik
    const countDownDate = new Date(targetDate).getTime();

    const updateTimer = () => {
      const now = new Date().getTime();
      const distance = countDownDate - now;

      if (distance < 0) {
        const wrapper = document.getElementById("countdown-wrapper");
        if (wrapper) wrapper.innerHTML = "<div class='col-span-4 text-primary text-2xl font-bold'>Die Messe läuft!</div>";
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      const setVal = (id, val) => {
        const el = document.getElementById(id);
        if (el) el.innerText = val < 10 ? "0" + val : val;
      }

      setVal("days", days);
      setVal("hours", hours);
      setVal("minutes", minutes);
      setVal("seconds", seconds);
    };

    // Initial call & interval
    updateTimer();
    setInterval(updateTimer, 1000);
  </script>

</MarketingLayout>