---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

const title = "Prozesse & Digitalisierung | Autaxo Partnernetzwerk";
const description = "Experten für GoBD-Workflows, E-Rechnung (ZUGFeRD/XRechnung), Kassenbuch und Mitarbeiterschulung. Machen Sie Ihren Autohandel papierlos.";

// Die Partner aus deinem HTML, sauber strukturiert
const partners = [
  {
    name: "Digital-Consulting Essen",
    location: "Essen, NRW",
    status: "Zertifiziert",
    specialties: ["GoBD-Verfahrensdokumentation", "Workflow-Audit", "Schulung"],
    // Bild aus deinem HTML übernommen
    image: "https://unicorn-images.b-cdn.net/383349b3-0799-4413-8e40-918e8f2e851e?optimizer=gif&width=600",
    link: "#", 
    isLive: false // Aktuell "in Arbeit"
  },
  {
    name: "Prozess-Optimierer Köln",
    location: "Köln, NRW",
    status: "Zertifiziert",
    specialties: ["E-Rechnung Setup", "Papierloses Büro", "Schnittstellen"],
    image: "https://unicorn-images.b-cdn.net/415007de-44eb-47ce-a2de-0f82694290a6?optimizer=gif&width=600",
    link: "#",
    isLive: false
  },
  {
    name: "Autohaus Digital Nord",
    location: "Hamburg",
    status: "Zertifiziert",
    specialties: ["KPI-Reporting", "Change Management", "Autaxo Rollout"],
    image: "https://unicorn-images.b-cdn.net/d6a56c6e-8abe-4eaf-81e5-954eff814092?optimizer=gif&width=600",
    link: "#",
    isLive: false
  }
];

const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": title,
  "description": description
};
---

<MarketingLayout title={title} description={description}>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(schema)} />

  <section class="relative pt-32 pb-16 bg-[#0b0c10]">
    <div class="absolute top-0 right-0 w-[800px] h-[600px] bg-purple-600/10 blur-[120px] rounded-full pointer-events-none -z-10"></div>

    <div class="container mx-auto px-4 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-purple-500/10 border border-purple-500/20 text-purple-400 text-sm font-medium mb-6">
        <Icon name="lucide:cpu" class="w-4 h-4" />
        Partnernetzwerk: Digitalisierung
      </div>
      
      <h1 class="text-3xl md:text-5xl font-extrabold text-white mb-6">
        Software ist das Werkzeug. <br class="hidden md:block" />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-purple-600">Prozesse sind der Motor.</span>
      </h1>
      
      <p class="text-text-muted max-w-2xl mx-auto text-lg leading-relaxed">
        Die beste Software bringt nichts, wenn die Abläufe im Autohaus noch analog sind. 
        Unsere Partner helfen bei <strong>GoBD-Dokumentation</strong>, der Umstellung auf <strong>E-Rechnung</strong> und schulen dein Team.
      </p>
    </div>
  </section>

  <section class="pb-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        {partners.map((partner) => (
          <div class="group bg-[#15171e] border border-white/10 rounded-2xl overflow-hidden hover:border-purple-500/30 transition-all hover:-translate-y-1 shadow-lg">
            
            <div class="aspect-[4/3] overflow-hidden relative bg-[#1a1d26]">
              <img 
                src={partner.image} 
                alt={partner.name} 
                loading="lazy"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500 grayscale group-hover:grayscale-0 opacity-80 group-hover:opacity-100"
              />
              <div class="absolute top-4 right-4 bg-black/80 backdrop-blur text-white text-xs font-bold px-3 py-1 rounded-full border border-purple-500/30 flex items-center gap-2">
                <div class="w-2 h-2 rounded-full bg-purple-500 animate-pulse"></div>
                {partner.status}
              </div>
            </div>

            <div class="p-6">
              <div class="flex items-center gap-2 text-text-muted text-sm mb-3">
                <Icon name="lucide:map-pin" class="w-4 h-4 text-purple-400" />
                {partner.location}
              </div>
              
              <h3 class="text-xl font-bold text-white mb-4 group-hover:text-purple-400 transition-colors">
                {partner.name}
              </h3>

              <div class="flex flex-wrap gap-2 mb-8 min-h-[60px]">
                {partner.specialties.map((tag) => (
                  <span class="px-2 py-1 bg-purple-500/10 rounded text-xs text-purple-200 border border-purple-500/10">
                    {tag}
                  </span>
                ))}
              </div>

              {partner.isLive ? (
                <a href={partner.link} target="_blank" class="flex items-center justify-center gap-2 w-full py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-bold transition-colors">
                  Profil ansehen
                  <Icon name="lucide:arrow-right" class="w-4 h-4" />
                </a>
              ) : (
                <div class="flex items-center justify-between w-full py-3 px-4 bg-white/5 border border-white/5 rounded-lg">
                  <span class="text-sm text-text-muted">Profil im Aufbau</span>
                  <Icon name="lucide:hammer" class="w-4 h-4 text-purple-500 opacity-50" />
                </div>
              )}
            </div>
          </div>
        ))}

        <div class="bg-gradient-to-br from-purple-900/10 to-[#15171e] border border-purple-500/20 border-dashed rounded-2xl p-8 flex flex-col justify-center items-center text-center group hover:bg-purple-900/20 transition-colors">
          <div class="w-16 h-16 bg-purple-500/10 rounded-full flex items-center justify-center mb-6 text-purple-400 group-hover:scale-110 transition-transform">
            <Icon name="lucide:briefcase" class="w-8 h-8" />
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Du berätst Autohäuser?</h3>
          <p class="text-text-muted text-sm mb-6">
            Hilf deinen Mandanten, mit Autaxo effizienter zu werden. Werde zertifizierter Digitalisierungs-Partner.
          </p>
          <a href="/kontakt?subject=partner" class="text-purple-400 font-bold hover:text-purple-300 transition-colors flex items-center gap-2">
            Partner werden
            <Icon name="lucide:arrow-right" class="w-4 h-4" />
          </a>
        </div>

      </div>
    </div>
  </section>

  <section class="py-20 bg-[#0f1117] border-t border-white/5">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-2xl font-bold text-white mb-8 text-center">Warum externe Beratung?</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="flex gap-4">
          <Icon name="lucide:file-check" class="w-8 h-8 text-purple-500 shrink-0" />
          <div>
            <h4 class="text-white font-bold mb-2">Verfahrensdokumentation</h4>
            <p class="text-sm text-text-muted">Jedes Unternehmen braucht laut GoBD eine Verfahrensdokumentation. Unsere Partner erstellen diese für deine Autaxo-Nutzung.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <Icon name="lucide:users" class="w-8 h-8 text-purple-500 shrink-0" />
          <div>
            <h4 class="text-white font-bold mb-2">Mitarbeiter-Onboarding</h4>
            <p class="text-sm text-text-muted">Neue Software scheitert oft am Faktor Mensch. Profis schulen dein Team, damit Autaxo ab Tag 1 richtig genutzt wird.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

</MarketingLayout>