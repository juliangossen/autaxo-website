---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

const title = "Laufende Buchhaltung | Autaxo Partnernetzwerk";
const description = "Zertifizierte Buchhaltungs-Services für den KFZ-Handel. GoBD-konform, §25a-sicher und mit direkter DATEV-Anbindung an Autaxo.";

// Die Partner aus deinem HTML
const partners = [
  {
    name: "JAGO Finance GmbH",
    location: "Deutschlandweit (Digital)",
    status: "Zertifiziert",
    specialties: ["KFZ-Expertise", "Laufende FiBu", "Digitale Prozesse"],
    // Logo aus deinem HTML übernommen
    image: "https://unicorn-images.b-cdn.net/5abd0e8c-2364-4da0-9624-fa8b8f5e729f?optimizer=gif&width=600",
    link: "https://jagofinance.de/", 
    isLive: true
  },
  {
    name: "NUK Enterprise UG",
    location: "Deutschlandweit (Digital)",
    status: "Zertifiziert",
    specialties: ["Gebrauchtwagenhandel", "Lohnbuchhaltung", "Startups"],
    image: "https://unicorn-images.b-cdn.net/28ecde28-5243-4c6e-b4ea-e21a4eaefa0f?optimizer=gif&width=600",
    link: "https://nuk-enterprise.de/",
    isLive: true
  },
  {
    name: "Buchhaltungsservice Hamburg",
    location: "Hamburg",
    status: "Zertifiziert",
    specialties: ["Beleg-Management", "Vorbereitung Jahresabschluss"],
    image: "https://unicorn-images.b-cdn.net/d6a56c6e-8abe-4eaf-81e5-954eff814092?optimizer=gif&width=600", // Placeholder
    link: "#",
    isLive: false // Noch in Arbeit
  }
];

const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": title,
  "description": description
};
---

<MarketingLayout title={title} description={description}>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(schema)} />

  <section class="relative pt-32 pb-16 bg-[#0b0c10]">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[900px] h-[500px] bg-green-600/10 blur-[120px] rounded-full pointer-events-none -z-10"></div>

    <div class="container mx-auto px-4 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-green-500/10 border border-green-500/20 text-green-400 text-sm font-medium mb-6">
        <Icon name="lucide:calculator" class="w-4 h-4" />
        Partnernetzwerk: Buchhaltung
      </div>
      
      <h1 class="text-3xl md:text-5xl font-extrabold text-white mb-6">
        Deine Zahlen. <br class="hidden md:block" />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-green-600">Jeden Monat perfekt sortiert.</span>
      </h1>
      
      <p class="text-text-muted max-w-2xl mx-auto text-lg leading-relaxed">
        Unsere Buchhaltungs-Partner arbeiten direkt mit den Daten aus Autaxo. 
        Das bedeutet: Kein Beleg-Chaos, korrekte <strong>§25a Verbuchung</strong> und ein stressfreier Jahresabschluss.
      </p>
    </div>
  </section>

  <section class="pb-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        {partners.map((partner) => (
          <div class="group bg-[#15171e] border border-white/10 rounded-2xl overflow-hidden hover:border-green-500/30 transition-all hover:-translate-y-1 shadow-lg flex flex-col">
            
            <div class="aspect-[16/9] bg-white p-6 flex items-center justify-center relative border-b border-white/5">
               <img 
                src={partner.image} 
                alt={partner.name} 
                loading="lazy"
                class="max-w-[80%] max-h-[80%] object-contain transition-transform duration-500 group-hover:scale-105"
              />
              <div class="absolute top-4 right-4 bg-[#0b0c10]/90 backdrop-blur text-white text-xs font-bold px-3 py-1 rounded-full border border-white/10 flex items-center gap-2 shadow-sm">
                <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
                {partner.status}
              </div>
            </div>

            <div class="p-6 flex-1 flex flex-col">
              <div class="flex items-center gap-2 text-text-muted text-sm mb-3">
                <Icon name="lucide:map-pin" class="w-4 h-4 text-green-400" />
                {partner.location}
              </div>
              
              <h3 class="text-xl font-bold text-white mb-4 group-hover:text-green-400 transition-colors">
                {partner.name}
              </h3>

              <div class="flex flex-wrap gap-2 mb-8">
                {partner.specialties.map((tag) => (
                  <span class="px-2 py-1 bg-green-500/10 rounded text-xs text-green-200 border border-green-500/10">
                    {tag}
                  </span>
                ))}
              </div>

              <div class="mt-auto"></div>

              {partner.isLive ? (
                <a href={partner.link} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-2 w-full py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg font-bold transition-colors shadow-lg shadow-green-900/20">
                  Website besuchen
                  <Icon name="lucide:external-link" class="w-4 h-4" />
                </a>
              ) : (
                <div class="flex items-center justify-between w-full py-3 px-4 bg-white/5 border border-white/5 rounded-lg cursor-not-allowed">
                  <span class="text-sm text-text-muted">Profil im Aufbau</span>
                  <Icon name="lucide:clock" class="w-4 h-4 text-green-500 opacity-50" />
                </div>
              )}
            </div>
          </div>
        ))}

        <div class="bg-gradient-to-br from-green-900/10 to-[#15171e] border border-green-500/20 border-dashed rounded-2xl p-8 flex flex-col justify-center items-center text-center group hover:bg-green-900/20 transition-colors">
          <div class="w-16 h-16 bg-green-500/10 rounded-full flex items-center justify-center mb-6 text-green-400 group-hover:scale-110 transition-transform">
            <Icon name="lucide:user-plus" class="w-8 h-8" />
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Bieten Sie Buchhaltung an?</h3>
          <p class="text-text-muted text-sm mb-6">
            Werden Sie Autaxo-Partner und erhalten Sie Mandate, die perfekt vorbereitete Daten liefern.
          </p>
          <a href="/kontakt?subject=partner" class="text-green-400 font-bold hover:text-green-300 transition-colors flex items-center gap-2">
            Jetzt bewerben
            <Icon name="lucide:arrow-right" class="w-4 h-4" />
          </a>
        </div>

      </div>
    </div>
  </section>

  <section class="py-20 bg-[#0f1117] border-t border-white/5">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-2xl font-bold text-white mb-8 text-center">Warum Autaxo-Partner?</h2>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div class="flex gap-4 p-4 rounded-xl hover:bg-white/5 transition-colors">
          <div class="bg-green-500/10 p-3 rounded-lg h-fit">
             <Icon name="lucide:file-check" class="w-6 h-6 text-green-500 shrink-0" />
          </div>
          <div>
            <h4 class="text-white font-bold mb-2">DATEV-Export Prüfung</h4>
            <p class="text-sm text-text-muted">Unsere Partner prüfen regelmäßig, ob die Schnittstelle zwischen Autaxo und DATEV sauber läuft, damit am Jahresende keine bösen Überraschungen warten.</p>
          </div>
        </div>

        <div class="flex gap-4 p-4 rounded-xl hover:bg-white/5 transition-colors">
          <div class="bg-green-500/10 p-3 rounded-lg h-fit">
             <Icon name="lucide:shield-check" class="w-6 h-6 text-green-500 shrink-0" />
          </div>
          <div>
            <h4 class="text-white font-bold mb-2">Kassenbuch & GoBD</h4>
            <p class="text-sm text-text-muted">Das Führen des Kassenbuchs ist oft fehleranfällig. Zertifizierte Buchhalter richten Autaxo so ein, dass Bargeldgeschäfte revisionssicher dokumentiert werden.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

</MarketingLayout>