---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { Icon } from 'astro-icon/components';

// 1. METADATEN
const title = "Autaxo für Steuerberater | Vorkontierter DATEV-Export";
const description = "Schluss mit Pendelordnern. Autaxo liefert Ihnen vorkontierte Buchungssätze (SKR03/04) und revisionssichere Belege. Kostenloser Kanzlei-Zugang.";

// 2. MATRIX CASES (Die "Steuer-Logik" als Daten)
const taxCases = [
  {
    title: "Fall A: §25a / Privatankauf",
    desc: "Automatische Berechnung der Marge und korrekte Zuweisung der Erlöskonten. Auf der Rechnung wird keine MwSt ausgewiesen.",
    badges: ["Ankaufvertrag", "Diff.Besteuerung", "Code 25a"],
    icon: "lucide:users"
  },
  {
    title: "Fall B: Regelbesteuerung / EU",
    desc: "Echtzeit-Prüfung der USt-ID via VIES-Schnittstelle. Automatische Dokumentation für steuerfreie igL (§ 4 Nr. 1b UStG).",
    badges: ["Netto-Rechnung", "USt-ID Protokoll", "ZM-Meldung"],
    icon: "lucide:flag"
  },
  {
    title: "Fall C: Export Drittland",
    desc: "Erkennt Ausfuhrlieferungen und erinnert den Mandanten an erforderliche Ausgangsvermerke und Nachweise (§ 4 Nr. 1a UStG).",
    badges: ["Ausfuhr-Rg.", "Ausgangsvermerk", "Steuerfrei"],
    icon: "lucide:globe"
  }
];

// 3. FEATURES (Die "Proof"-Sektion)
const features = [
  {
    title: "DATEV Export (EXTF)",
    text: "Einheitliche Kopf- und Positionsfelder, korrekter Header sowie eine lückenlose Export-Historie garantieren einen reibungslosen Import.",
    icon: "lucide:file-spreadsheet"
  },
  {
    title: "Digitale Fahrzeugakte",
    text: "Jeder externe Beleg – vom Ankauf bis zum Zollnachweis – wird GoBD-konform mit dem Geschäftsvorfall verknüpft und archiviert.",
    icon: "lucide:folder-check"
  },
  {
    title: "Automatisches Handelsbuch",
    text: "Autaxo führt im Hintergrund das gesetzlich geforderte Kfz-Handelsbuch (§ 143 AO). Ideal für die Betriebsprüfung.",
    icon: "lucide:book-marked"
  }
];

// 4. FAQ
const faqs = [
  {
    question: "Ist der Kanzlei-Zugang kostenpflichtig?",
    answer: "Nein. Der Zugang für Steuerberater und Buchhaltungsbüros ist dauerhaft kostenlos. Sie zahlen keine Lizenzgebühren."
  },
  {
    question: "Welche Kontenrahmen werden unterstützt?",
    answer: "Wir unterstützen SKR03 und SKR04 sowie den Spezialkontenrahmen SKR51 (Kfz-Gewerbe). Die Kontenzuordnung kann im Kanzlei-Dashboard individuell angepasst werden."
  },
  {
    question: "Wie erhalte ich die Belege?",
    answer: "Im DATEV-Export ist zu jedem Buchungssatz ein Link zum digitalen Belegbild enthalten (Belegfeld 2 / Link). Alternativ können Sie alle Belege als ZIP herunterladen."
  }
];
---

<MarketingLayout title={title} description={description}>

  <section class="relative pt-32 pb-24 bg-[#0b0c10] overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-blue-900/20 via-[#0b0c10] to-[#0b0c10]"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        
        <div class="text-left">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 text-xs font-bold uppercase tracking-wider mb-6">
            Für Steuerberater & Buchhaltung
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white mb-6 tracking-tight leading-tight">
            Vorkontierte Buchungssätze statt <span class="text-blue-500">Pendelordner.</span>
          </h1>
          <p class="text-xl text-text-muted leading-relaxed mb-8">
            Autaxo liefert strukturierte Daten statt Papierchaos. Mit Änderungsjournal und lückenloser Export-Historie für weniger Rückfragen bei Ihren KFZ-Mandanten.
          </p>

          <div class="flex flex-wrap gap-4">
            <a href="#demo" class="px-8 py-4 bg-primary hover:bg-primary-hover text-white font-bold rounded-lg transition-all shadow-lg shadow-primary/20">
              Demo-Termin vereinbaren
            </a>
            <a href="https://drive.google.com/uc?export=download&id=1vafvbgnna4RgM2XXrC6rSdB5Rd76iuNG" target="_blank" class="px-6 py-4 bg-white/5 hover:bg-white/10 text-white font-medium rounded-lg border border-white/10 flex items-center gap-2 transition-all">
              <Icon name="lucide:download" class="w-4 h-4" />
              Beispiel-Export (CSV)
            </a>
          </div>

          <div class="mt-8 flex gap-6 text-sm text-text-muted">
            <span class="flex items-center gap-2"><Icon name="lucide:check" class="w-4 h-4 text-blue-500" /> SKR03 / 04 / 51</span>
            <span class="flex items-center gap-2"><Icon name="lucide:check" class="w-4 h-4 text-blue-500" /> GoBD-konform</span>
          </div>
        </div>

        <div class="relative">
          <div class="rounded-2xl border border-white/10 bg-white/5 p-2 shadow-2xl backdrop-blur-sm">
            <div class="aspect-video rounded-xl bg-black overflow-hidden relative group cursor-pointer">
               <iframe 
                class="w-full h-full"
                src="https://www.youtube-nocookie.com/embed/gUjjNU9T-HY?rel=0&modestbranding=1" 
                title="Autaxo Steuerberater Demo"
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen>
              </iframe>
            </div>
          </div>
          <div class="absolute -z-10 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-blue-600/10 blur-[100px] rounded-full"></div>
        </div>

      </div>
    </div>
  </section>

  <section class="py-24 bg-[#11131a] border-y border-white/5">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl font-bold text-white mb-4">Die Steuer-Matrix</h2>
        <p class="text-text-muted">Autaxo ist keine Blackbox. Wir prüfen jeden Geschäftsvorfall auf Plausibilität, bevor er in Ihre Buchhaltung fließt.</p>
      </div>

      <div class="flex flex-col md:flex-row justify-between items-center gap-4 max-w-4xl mx-auto mb-16 text-sm font-bold text-text-muted uppercase tracking-wider">
        <div class="bg-[#0b0c10] border border-white/10 px-6 py-4 rounded-lg w-full text-center">Input (Beleg)</div>
        <Icon name="lucide:arrow-right" class="w-6 h-6 rotate-90 md:rotate-0 text-blue-500" />
        <div class="bg-[#0b0c10] border border-blue-500/30 px-6 py-4 rounded-lg w-full text-center text-blue-400 shadow-[0_0_20px_rgba(59,130,246,0.1)]">Autaxo Logik-Check</div>
        <Icon name="lucide:arrow-right" class="w-6 h-6 rotate-90 md:rotate-0 text-blue-500" />
        <div class="bg-[#0b0c10] border border-white/10 px-6 py-4 rounded-lg w-full text-center">Output (Buchungssatz)</div>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {taxCases.map((item) => (
          <div class="bg-[#0b0c10] border border-white/10 p-6 rounded-xl hover:border-blue-500/30 transition-colors">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 rounded-lg bg-blue-500/10 flex items-center justify-center text-blue-400">
                <Icon name={item.icon} class="w-5 h-5" />
              </div>
              <h3 class="text-lg font-bold text-white">{item.title}</h3>
            </div>
            <p class="text-text-muted text-sm leading-relaxed mb-6 h-20">
              {item.desc}
            </p>
            <div class="flex flex-wrap gap-2">
              {item.badges.map((badge) => (
                <span class="px-2 py-1 bg-white/5 border border-white/5 rounded text-xs text-gray-400">
                  {badge}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl font-bold text-white mb-4">Weniger Nacharbeit bei der Prüfung</h2>
        <p class="text-text-muted">Für KFZ-Mandanten optimiert: saubere Strukturen, valide Exporte und klare Nachweise.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-surface border border-white/5 p-8 rounded-2xl">
            <Icon name={feature.icon} class="w-10 h-10 text-white mb-6" />
            <h3 class="text-xl font-bold text-white mb-3">{feature.title}</h3>
            <p class="text-text-muted text-sm leading-relaxed">
              {feature.text}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-24 bg-surface border-t border-white/5">
    <div class="container mx-auto px-4">
      <div class="bg-[#0b0c10] border border-white/10 rounded-3xl p-8 md:p-12 max-w-5xl mx-auto relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-blue-500/5 blur-[80px] rounded-full pointer-events-none"></div>
        
        <div class="text-center mb-12">
          <h2 class="text-2xl font-bold text-white mb-4">So erhalten Sie Zugriff</h2>
          <p class="text-text-muted">In 3 einfachen Schritten zum Mandanten-Dashboard.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 text-center relative z-10">
          <div class="relative">
            <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4 shadow-lg shadow-blue-500/20">1</div>
            <h4 class="text-white font-semibold mb-2">Einladung</h4>
            <p class="text-sm text-text-muted">Mandant lädt Kanzlei per E-Mail aus Autaxo ein.</p>
          </div>
          <div class="relative">
            <div class="hidden md:block absolute top-6 left-[-50%] w-full h-[2px] bg-white/5 -z-10"></div>
            <div class="w-12 h-12 bg-[#15171e] border border-white/20 text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">2</div>
            <h4 class="text-white font-semibold mb-2">Registrierung</h4>
            <p class="text-sm text-text-muted">Kostenlosen Kanzlei-Account erstellen.</p>
          </div>
          <div class="relative">
            <div class="hidden md:block absolute top-6 left-[-50%] w-full h-[2px] bg-white/5 -z-10"></div>
            <div class="w-12 h-12 bg-[#15171e] border border-white/20 text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">3</div>
            <h4 class="text-white font-semibold mb-2">Zugriff</h4>
            <p class="text-sm text-text-muted">Mandant erscheint sofort in Ihrem Dashboard.</p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <section class="py-24 bg-[#0b0c10]">
    <div class="container mx-auto px-4 max-w-3xl">
      <h2 class="text-2xl font-bold text-white mb-8 text-center">Häufige Fragen von Steuerberatern</h2>
      <div class="space-y-4">
        {faqs.map((faq) => (
          <details class="group bg-surface border border-white/10 rounded-lg overflow-hidden">
            <summary class="flex items-center justify-between p-5 cursor-pointer hover:bg-white/5 transition-colors">
              <h3 class="font-medium text-white pr-4">{faq.question}</h3>
              <span class="text-primary transition-transform group-open:rotate-180">▼</span>
            </summary>
            <div class="p-5 pt-0 text-text-muted text-sm leading-relaxed border-t border-white/5 mt-2">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section id="demo" class="py-24 text-center bg-surface border-t border-white/5">
    <div class="container mx-auto px-4">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-500/10 text-blue-400 mb-6">
        <Icon name="lucide:calendar-check-2" class="w-8 h-8" />
      </div>
      <h2 class="text-3xl font-bold text-white mb-4">Lassen Sie uns sprechen.</h2>
      <p class="text-text-muted mb-8 max-w-xl mx-auto">
        In 30 Minuten zeigen wir Ihnen, wie Sie die Zusammenarbeit mit Ihren Autohandel-Mandanten effizienter gestalten.
      </p>
      <a 
        href="https://calendar.google.com/calendar/appointments/schedules/AcZssZ0-xc9C7ft1ZGEy3HpR6hP8NyrHXyM_ikIgv0KEUx9tSnzjZGoQ1RNyF4X5WMjk0o4vg6A9ksjD?gv=true&mode=week" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-block px-8 py-4 bg-primary hover:bg-primary-hover text-white font-bold rounded-lg transition-colors shadow-lg shadow-primary/20"
      >
        Termin auswählen
      </a>
    </div>
  </section>

</MarketingLayout>